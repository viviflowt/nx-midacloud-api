# Build the docker image with `npx nx docker-build tenant`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t tenant`.
FROM docker.io/node:18-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system tenant && \
          adduser --system -G tenant tenant

COPY dist/apps/tenant tenant
RUN chown -R tenant:tenant .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix tenant --omit=dev -f install

CMD [ "node", "tenant" ]
